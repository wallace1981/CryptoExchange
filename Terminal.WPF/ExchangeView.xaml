                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        Text="{Binding Path=Total, Mode=OneWay, StringFormat=N3}"
                                        FontFamily="{StaticResource RobotoCondensed}"
                                        HorizontalAlignment="Right"
                                    />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
